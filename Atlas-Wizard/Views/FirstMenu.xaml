<UserControl
    x:Class="Atlas_Wizard.Views.FirstMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Atlas_Wizard.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Atlas_Wizard.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock FontSize="36" HorizontalAlignment="Center" Margin="0,60,0,0" Grid.RowSpan="2">Install AtlasOS</TextBlock>
        <Button Click="Button_Click" Content="Select a playbook" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
